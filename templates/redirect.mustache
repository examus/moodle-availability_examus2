{{!
    @template availability_examus2/redirect

    Redirect form

    Example context (json):
    {
        "action": "https://example.com/integration/simple/demo-client/start/",
        "method": "POST",
        "token": "abc123"
    }
}}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Redirecting to Examus</title>
        </head>
    <body>
        <div style="text-align: center">
            <form action="{{action}}" method="{{method}}" id="availability_examus2_redirect_form">
                {{#token}}
                    <input type="hidden" value="{{token}}" name="token">
                {{/token}}
                <button type="submit">Go to Examus</button>
            </form>
        </div>
        <script type="text/javascript">
            function redirect() {
                document.getElementById('availability_examus2_redirect_form').submit();
            }
            try { redirect() } catch (e) { console.error(e) };
            setTimeout(redirect, 5000);
            setTimeout(redirect, 10000);
        </script>
  </body>
</html>
